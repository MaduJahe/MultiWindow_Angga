<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/dummytext"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.257" />

    <Button
        android:id="@+id/btn_berita"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="88dp"
        android:text="Berita"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btn_Profile"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:text="PROFILE"
        app:layout_constraintEnd_toEndOf="@+id/btn_berita"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_berita"
        app:layout_constraintTop_toBottomOf="@+id/btn_berita" />

    <Button
        android:id="@+id/btn_Exits"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:text="EXIT"
        app:layout_constraintEnd_toEndOf="@+id/btn_Profile"
        app:layout_constraintStart_toStartOf="@+id/btn_Profile"
        app:layout_constraintTop_toBottomOf="@+id/btn_Profile" />

</androidx.constraintlayout.widget.ConstraintLayout>